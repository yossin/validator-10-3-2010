<UserControl x:Class="The_Validator11.ConvertionClassItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Grid Height="Auto">
        <WrapPanel Margin="0,4">
            <Button Name="RemoveConvertionClassItem" Click="RemoveConvertionClassItem_Click" Content="X" Height="19" Width="19" Padding="-1" Margin="8,2">            </Button>
            <TextBox Name="convertionItemName" Width="150" Text="Class Item Name" Padding="1,4" >   </TextBox>
            <ComboBox Name="convertToCombo" Height="23"  Width="140" Margin="8,0">           </ComboBox>
            <Button Name="AddConvertionClassItem" Click="AddConvertionClassItem_Click" Content="+ Class Item" HorizontalAlignment="Left" Height="19" Padding="-1" Width="75" Margin="0,0">            </Button>
        </WrapPanel>
    </Grid>
</UserControl>
